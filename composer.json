{
    "name": "microsoft/azure-sdk",
    "description": "This SDK provides a set of PHP client libraries to access Microsoft Azure Storage Resource Provider APIs (and other APIs in the future).",
    "keywords": [ "php", "azure", "sdk" ],
    "license": "MIT",
    "authors": [
        {
            "name": "Azure PHP SDK",
            "email": "azurephpsdk@microsoft.com"
        }
    ],
    "require": {
        "php": ">=5.5",
        "php-http/async-client-implementation": "^1.0",
        "php-http/discovery": "^0.8"
    },
    "require-dev": {
        "php-http/guzzle6-adapter": "^1.0",
        "mikey179/vfsStream": "^1.6",
        "phpunit/phpunit": "^4.8",
        "fabpot/php-cs-fixer": "^1.11",
        "puli/composer-plugin": "^1.0@beta"
    },
    "autoload": {
        "psr-4": { "MicrosoftAzure\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": { "Tests\\": "tests/" }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.10-dev"
        }
    },
    "minimum-stability": "dev"
}
